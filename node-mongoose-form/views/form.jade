extends layout

block content
  // passed into layout.jade when form.jade is rendered

  div(class="blog-text")
    h3(id="form-title")= title
    form(method="post", action="/form")
      label(for= "comment") Title:
      input(type="text", name="comment", value=comment, id="titleInput", class="input")
      label(for="post") Content:
      textarea(type="text", name="blog", value=blog, id="blogInput", class="input" )
      input(type="submit", value="Save" class="button")
